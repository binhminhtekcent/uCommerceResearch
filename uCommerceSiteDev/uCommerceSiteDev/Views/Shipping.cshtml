@{
    Layout = "PageTemplate.cshtml";
}
@inherits Umbraco.Web.Mvc.UmbracoViewPage<uCommerceSiteDev.Models.ShippingViewModel>


<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Check out</li>
            </ol>
        </div><!--/breadcrums-->

        <div class="step-one">
            <h2 class="heading">Step2</h2>
        </div>
        <form method="post">
            <div class="row well">
                <div class="col-md-6">
                    <h3>Shipping method</h3>
                    <br />
                    @if (Model.AvailableShippingMethods.Count > 0)
            {
                foreach (var shippingMethod in Model.AvailableShippingMethods)
                {
                            <label class="radio">
                                @if (shippingMethod.Selected)
                                {
                                    @Html.RadioButtonFor(x => x.SelectedShippingMethodId, shippingMethod.Value, new { @checked = "checked" })
                                    @shippingMethod.Text
                                }
                                else
                                {
                                    @Html.RadioButtonFor(x => x.SelectedShippingMethodId, shippingMethod.Value)
                                    @shippingMethod.Text
                                }
                            </label>
                        }
                    }
                    else
                    {
                        <p class="alert">
                            WARNING: No shipping methods have been configured for @Model.ShippingCountry within <a href="http://ucommerce.dk">UCommerce</a> administration area.
                        </p>
                    }
                </div>
            </div>
            <a href="/basket/address.aspx" class="btn btn-secondary">Back to Address</a>
            <button name="update-shipment" class="pull-xs-right btn btn-secondary btn-lg btn-success" type="submit">Continue to Confirmation <i class="icon-arrow-right icon-white"></i> </button>
        </form>
    </div>
</section>

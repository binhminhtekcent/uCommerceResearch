                                        <a class="cart_quantity_down" href=""> - </a>
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@line.Total</p>
                                </td>
                                <td class="cart_delete">
                                    <button type="submit" value="@line.OrderLineId" name="RemoveOrderlineId" class="cart_quantity_delete"><i class="fa fa-times"></i></button>
                                    @*<a class="cart_quantity_delete" href="#" value="@line.OrderLineId" name="RemoveOrderlineId" onclick="document.getElementById('form-basket').submit();"><i class="fa fa-times"></i></a>*@

@model uCommerceSiteDev.Models.CategoryNavigationViewModel
@{
    Layout = null;
}

<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->
    @foreach (var item in Model.Categories)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordian" href="#@item.Name">
                        <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                        @item.Name
                    </a>
                </h4>
            </div>
            <div id="@item.Name" class="panel-collapse collapse">
                <div class="panel-body">
                    <ul>
                        @foreach (var subItem in item.Categories)
                        {
                            <li><a href="@subItem.Url">@subItem.Name </a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
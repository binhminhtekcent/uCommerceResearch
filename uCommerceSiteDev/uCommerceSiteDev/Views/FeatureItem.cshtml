@model uCommerceSiteDev.Models.ProductsViewModel
@{
    Layout = null;
}

<h2 class="title text-center">Features Items</h2>
@foreach (var product in Model.Products)
{
    var productPrice = "";
    if (product.PriceCalculation.ListPrice != null)
    {
        productPrice = product.PriceCalculation.YourPrice.Amount.ToString();
    }
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src="@product.ThumbnailImageUrl" alt="" height="254" width="255" />
                    <h2>@productPrice</h2>
                    <p>@product.Name</p>
                    <a href="@product.Url" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>View Details</a>
                </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>@productPrice</h2>
                        <p>@product.Name</p>
                        <a href="@product.Url" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>View Details</a>
                    </div>
                </div>
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                    <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                </ul>
            </div>
        </div>
    </div>
}